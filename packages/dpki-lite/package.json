{
  "name": "@holochain/dpki-lite",
  "version": "0.0.1",
  "description": "The browser-side crypto for holo light clients.",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --fix 'lib/**/*.js' 'bin/**/*.js'",
    "mocha": "mocha lib/**/*.test.js bin/**/*.test.js",
    "nyc": "nyc npm run mocha",
    "karma": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "test-nyc": "npm run lint && npm run nyc",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\"",
    "build-webpack": "webpack",
    "test":"npm run build-webpack && cd testing-module && grunt karma:dev"

  },
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.4.0",
    "babel-preset-env": "^1.2.1",
    "babel-preset-es2015": "^6.22.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.4.0",
    "sinon": "^7.1.1",
    "standard": "^12.0.1",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "bip39": "^2.5.0",
    "libsodium-wrappers-sumo": "^0.7.4",
    "msgpack-lite": "^0.1.26"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "generate-docs": {
    "util": "lib/util.js",
    "keypair": "lib/keypair.js",
    "seed": "lib/seed.js"
  }
}
