{
  "name": "@holochain/dpki-lite",
  "version": "0.0.1",
  "description": "The browser-side crypto for holo light clients.",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --fix 'lib/**/*.js' 'bin/**/*.js'",
    "mocha": "mocha lib/**/*.test.js bin/**/*.test.js",
    "nyc": "nyc npm run mocha",
    "test": "npm run lint && npm run nyc",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\"",
    "karma": "npm run build-browserify && karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "build-browserify": "mkdir -p dist && browserify ./lib/index.js --debug | exorcist ./dist/bundle.js.map > ./dist/bundle.js"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "exorcist": "^1.0.1",
    "karma": "^4.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-requirejs": "^1.1.0",
    "libsodium-sumo": "^0.7.4",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.4.0",
    "requirejs": "^2.3.6",
    "sinon": "^7.1.1",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "bip39": "^2.5.0",
    "libsodium-wrappers-sumo": "^0.7.4",
    "msgpack-lite": "^0.1.26",
    "pbkdf2": "^3.0.17",
    "prompt": "^1.0.0",
    "safe-buffer": "^5.1.2"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "generate-docs": {
    "util": "lib/util.js",
    "keypair": "lib/keypair.js",
    "seed": "lib/seed.js"
  }
}
